# Fix for NativeWind and react-native-css-interop resolution issues
# Based on https://github.com/nativewind/nativewind/issues/894

# Auto-install peer dependencies
auto-install-peers=true

# Use strict peer dependencies
strict-peer-dependencies=false

# Legacy peer deps for compatibility with React Native
legacy-peer-deps=true

# Shamefully hoist packages to avoid resolution issues
shamefully-hoist=true

# Node linker for better compatibility
node-linker=hoisted

# Public hoisting pattern for NativeWind dependencies
public-hoist-pattern[]=*nativewind*
public-hoist-pattern[]=*react-native-css-interop*
public-hoist-pattern[]=*tailwindcss*

# Ensure proper module resolution
resolve-peers-from-workspace-root=true